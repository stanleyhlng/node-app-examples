extends layout

block content
  h1= title
  p Welcome to #{title}

  table#profiles
    tr
      th Name
      th Irc
      th Twitter
      th Github
      th Location
      th Description
        each profile, id in profiles
          tr(id=id)
            each row in profile
              td= row

  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
  script
    setTimeout(function() {
      $.get('/', function(row) {
        $('#profiles tbody').append(row);
      });
    }, 1500);
